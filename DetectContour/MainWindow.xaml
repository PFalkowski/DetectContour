<Window x:Class="DetectContour.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DetectContour"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="openFileButton" Margin="10" Content="Open Image" Command="{Binding OpenImageCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>

        <Button x:Name="saveFileButton" Grid.Row="2" Margin="10" Content="Save Contours" Command="{Binding SaveContoursCommand}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75"/>

    </Grid>
</Window>
